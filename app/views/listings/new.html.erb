<div style="font-size:large; font-variant:small-caps; font-weight:bold; color:#4A777A; padding-top:15px ;">Post a Work Oppurtunity</div><hr>

<% form_for(@listing) do |f| %>
  <%= f.error_messages %>
  <p>
    Title<br />
    <%= f.text_field :title, :style=>'margin-top:5px;'  %>
  </p>
  <p>
    <div style='padding-bottom:5px'>Category</div>
    <%= f.select :category, "<option>%s</option>"%Listing::CATEGORIES.join('</option><option>') %>
  </p>
  <p>
    Address<br />
    <%= f.text_field :address, :value=>current_user.address, :style=>'margin-top:5px;' %> <!---  --->
  </p>
  <p>
    Description<br />
    <%= f.text_area :description, :style=>'margin-top:5px;', :size=>"40x5"  %>
  </p>
  <p>
    Approximate Payment<br />
    $ <%= f.text_field :approx_payment, :style=>'margin-top:5px; margin-right:20px;'  %>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<h1>Search Results</h1>

<table>
<% if @results!=nil %>
  <tr>
    <th>Employer</th>
    <th>Title</th>
    <th>Category</th>
    <th>Description</th>
    <th>Approx payment</th>
    <th>Zipcode</th>
  </tr>
	<% @results.each do |listing| %>
	
  	<tr>
    	<td><%=h listing.user.login %></td>
    	<td><%=h listing["title"] %></td>
    	<td><%=h listing["category"] %></td>
    	<td><%=h listing["description"] %></td>
    	<td><%=h listing["approx_payment"] %></td>
    	<td><%=h listing["zipcode"] %>, <%=h link_to 'Show', listing %></td>
  	</tr>
	<% end %>
<% end %>
</table>


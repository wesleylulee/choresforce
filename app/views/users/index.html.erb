<h1>Listing users</h1>

<table>
  <tr>
    <th>Login</th>
    <th>Email</th>
    <th>Crypted password</th>
    <th>Salt</th>
    <th>Remember token</th>
    <th>Remember token expires at</th>
    <th>Address</th>
    <th>Employer rating</th>
    <th>Num eratings</th>
    <th>Worker rating</th>
    <th>Num wratings</th>
    <th>Description</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.login %></td>
    <td><%=h user.email %></td>
    <td><%=h user.crypted_password %></td>
    <td><%=h user.salt %></td>
    <td><%=h user.remember_token %></td>
    <td><%=h user.remember_token_expires_at %></td>
    <td><%=h user.address %></td>
    <td><%=h user.employer_rating %></td>
    <td><%=h user.num_eratings %></td>
    <td><%=h user.worker_rating %></td>
    <td><%=h user.num_wratings %></td>
    <td><%=h user.description %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

